<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.cs408.meadle.NumberPadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numberpad" >

        <EditText
            android:editable="false"
            android:id="@+id/textBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/purple"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="50sp"
            />

    </RelativeLayout>


    <GridLayout
        android:id="@+id/numberpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:columnCount="3"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/numberpad_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="1"/>
        <Button
            android:id="@+id/numberpad_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="2"/>

        <Button
            android:id="@+id/numberpad_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="3"/>
        <Button
            android:id="@+id/numberpad_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="4"/>

        <Button
            android:id="@+id/numberpad_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="5"/>


        <Button
            android:id="@+id/numberpad_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="6"/>
        <Button
            android:id="@+id/numberpad_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="7"/>

        <Button
            android:id="@+id/numberpad_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="8"/>

        <Button
            android:id="@+id/numberpad_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="9"/>



        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            style="@style/MeadleTheme.DeleteButtonStyle"
            >
            <Button
                android:id="@+id/accept_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                style="@style/MeadleTheme.NumberButtonStyle"/>
        </RelativeLayout>

        <Button
            android:id="@+id/numberpad_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MeadleTheme.NumberButtonStyle"
            android:text="0"/>

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            style="@style/MeadleTheme.DeleteButtonStyle"
            >
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:background="@drawable/backspace"/>
        </RelativeLayout>


    </GridLayout>

</RelativeLayout>
